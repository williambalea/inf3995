<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:background="@drawable/background_bg"
android:orientation="vertical" android:weightSum="9"
tools:context="inf3995.bixiapplication.StationsDataActivity"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://schemas.android.com/tools ">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_weight="1"
    app:layout_constraintBottom_toTopOf="parent"
    app:layout_constraintTop_toBottomOf="parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_data" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="STATION USAGE DATA"
                android:textColor="@color/colorWhite"
                android:textSize="60sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
</LinearLayout>

<LinearLayout
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="8"
    android:background="@drawable/recyclerview_bg"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Station_code_Label"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="Code : "
            android:textColor="#130877"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Station_code"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:text="Station Code"
            android:textColor="@color/colortextlabel"
            android:textSize="40sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Station_name_Label"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="Name : "
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#130877"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Station_name"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:text="Station Name"
            android:textColor="@color/colortextlabel"
            android:textSize="40sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spnTime"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:background="@drawable/spiner_bg"
            android:spinnerMode="dropdown"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spnPeriod"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:background="@drawable/spiner_bg"
            android:spinnerMode="dropdown"/>

        <Button
            android:id="@+id/buttonSend"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="@string/display"
            android:layout_marginLeft="20dp"
            android:textSize="30sp"
            android:textStyle="bold"
             />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/data_activity_fragment_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>

</LinearLayout>