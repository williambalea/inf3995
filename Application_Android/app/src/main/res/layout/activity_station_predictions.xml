<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_bg"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context="inf3995.bixiapplication.StationPredictionsActivity"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schemas.android.com/tools ">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_statistic"
                    android:layout_marginStart="0dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:text="@string/station_usage_predictions"
                    android:textColor="@color/colorWhite"
                    android:textSize="50sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/coord_station"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recyclerview_bg_2"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Station_code_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/code"
                android:textColor="@color/colortextdata"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Station_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:text="@string/station_code"
                android:textColor="@color/colortextlabel"
                android:textSize="40sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Station_name_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/name"
                android:textColor="@color/colortextdata"
                android:textSize="40sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/Station_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:text="@string/station_name"
                android:textColor="@color/colortextlabel"
                android:textSize="40sp"
                android:textStyle="bold"
                app:fontFamily="sans-serif"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="8"
        android:background="@drawable/recyclerview_bg_2"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/startDateButton"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="Start Date"
                android:textColor="@color/colortextdata"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/startDate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="Date"
                android:textColor="@color/colortextlabel"
                android:textSize="25sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/endDateButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="End Date"
                android:textColor="@color/colortextdata"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/endDate"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="Date"
                android:textColor="@color/colortextlabel"
                android:textSize="25sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_margin="0dp"
                        android:gravity="center"
                        android:text="@string/choose_year"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/spnTimes"
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/spiner_bg"
                        android:gravity="center_horizontal"
                        android:hint="@string/choose_year"
                        android:spinnerMode="dropdown"
                        android:textAlignment="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_margin="0dp"
                        android:gravity="center"
                        android:text="@string/choose_period"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/spnPeriode"
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/spiner_bg"
                        android:gravity="center_horizontal"
                        android:hint="@string/choose_period"
                        android:spinnerMode="dropdown"
                        android:textAlignment="center" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_margin="0dp"
                        android:gravity="center"
                        android:text="@string/select_indicator"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/spnIndicator"
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/spiner_bg"
                        android:gravity="center_horizontal"
                        android:hint="@string/choose_period"
                        android:spinnerMode="dropdown"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_margin="0dp"
                        android:gravity="center"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/display_button"
                        android:layout_width="180dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:text="@string/display"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>



            <FrameLayout
                android:id="@+id/global_data_fragment_holder"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>