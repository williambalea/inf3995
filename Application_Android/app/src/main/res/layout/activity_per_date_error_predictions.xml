<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context="inf3995.bixiapplication.StationView.PredictionErrors.PerDatePredictionErrorsActivity">

    <include
        android:id="@+id/lllProgressBarPerD"
        android:visibility="visible"
        layout="@layout/progress_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="100dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/background_bg"
                android:orientation="vertical"
                >

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="190dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_statistic" />

                    <TextView
                        android:layout_width="593dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="PREDICTION ERRORS"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="45sp"
                        android:textStyle="bold" />

                </androidx.appcompat.widget.Toolbar>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ErrorPredictionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5sp"
                    android:text="Prediction Errors per Date for year:"
                    android:textColor="@color/colortextdata"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/ErrorPredictionYear"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="5sp"
                    android:layout_marginStart="20dp"
                    android:text="Prediction Year"
                    android:textSize="25sp"
                    android:textColor="@color/colortextlabel"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:id="@+id/ErrorPredictionPrecision"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="5sp"
                    android:layout_marginStart="50dp"
                    android:text="Precision : "
                    android:textSize="25sp"
                    android:textColor="@color/colortextdata"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:id="@+id/PrecisionPredictionValue"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="5sp"
                    android:layout_marginStart="20dp"
                    android:text="Prediction Year"
                    android:textSize="25sp"
                    android:textColor="@color/colortextlabel"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold">
                </TextView>

            </LinearLayout>

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/oranges" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:background="#DD2C00"
                    android:padding="5dp"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:weightSum="9"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text80"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:layout_weight="3"
                        android:text="@string/rank"
                        android:textColor="#ffff"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text81"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:layout_weight="3"
                        android:text="Month-Day-Hour"
                        android:textColor="#ffff"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text82"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:layout_weight="3"
                        android:text="Errors"
                        android:textColor="#ffff"
                        android:textStyle="bold" />


                </LinearLayout>

                <ScrollView
                    android:id="@+id/scrollView2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="0dp">

                    <TableLayout
                        android:id="@+id/main_table"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="9"
                        android:layout_marginTop="0dp"
                        android:paddingLeft="5dp"
                        app:tabMode="scrollable"
                        android:paddingRight="5dp">

                    </TableLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>