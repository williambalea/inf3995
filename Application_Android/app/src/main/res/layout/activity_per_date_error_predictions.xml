<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context="inf3995.bixiapplication.StationView.PredictionErrors.PerDatePredictionErrorsActivity">

    <include
        android:id="@+id/lllProgressBarPerD"
        android:visibility="visible"
        layout="@layout/progress_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/background_bg"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_statistic" />

                <TextView
                    android:layout_width="600dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="PREDICTION ERRORS"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="50sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ErrorPredictionTitle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="5sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colortextdata"
            android:text="Prediction Errors per Date for year:"
            android:textSize="25sp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/ErrorPredictionYear"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_margin="5sp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="Prediction Year"
            android:textSize="25sp"
            android:textColor="@color/colortextdata"
            android:layout_gravity="center_vertical"
            android:textStyle="bold">
        </TextView>

    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/oranges" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:background="#DD2C00"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text80"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_weight="0.5"
                android:text="@string/rank"
                android:textColor="#ffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text81"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_weight="0.5"
                android:text="Time"
                android:textColor="#ffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text82"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_weight="0.5"
                android:text="Errors"
                android:textColor="#ffff"
                android:textStyle="bold" />


        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="0dp">

            <TableLayout
                android:id="@+id/main_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:paddingLeft="5dp"
                app:tabMode="scrollable"
                android:paddingRight="5dp">


            </TableLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>