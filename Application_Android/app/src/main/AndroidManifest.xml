<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="inf3995.test.bixiapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="inf3995.bixiapplication.SurveyActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="inf3995.bixiapplication.StationsDataActivity" />
        <activity android:name="inf3995.bixiapplication.StationPredictionsActivity" />
        <activity android:name="inf3995.bixiapplication.StationStatisticsActivity" />
        <activity android:name="inf3995.bixiapplication.GlobalPredictionsActivity" />
        <activity android:name="inf3995.bixiapplication.GlobalStatisticsActivity" />
        <activity android:name="inf3995.bixiapplication.GlobalDataActivity" />
        <activity android:name="inf3995.bixiapplication.ListStationActivity" />
        <activity android:name="inf3995.bixiapplication.StationCoordinatesActivity" />
        <activity
            android:name="inf3995.bixiapplication.MainScreen.MainScreenActivity"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>