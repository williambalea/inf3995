<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/background_bg"
    android:orientation="vertical" android:weightSum="9"
    tools:context=".StationsDataActivity"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schemas.android.com/tools ">

    <LinearLayout android:layout_width="match_parent" android:layout_height="6dp"
        android:layout_weight="1" app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar"
            android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="center" android:text="STATION DATA"
                android:textColor="@color/colorWhite" android:textSize="40sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <LinearLayout android:id="@+id/swipeRefresh" android:layout_width="match_parent"
        android:layout_height="240dp" android:layout_weight="8"
        android:background="@drawable/recyclerview_bg" android:orientation="vertical"
        android:padding="10dp">

        <ImageView android:id="@+id/imageView" android:layout_width="100dp"
            android:layout_height="100dp" android:scaleType="fitXY"
            android:src="@drawable/ic_place_black_48dp" />

        <TextView android:id="@+id/Station_name" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:hint="Station Name:"
            android:text=" Station Name" android:textColor="@color/colorPrimary1"
            android:textSize="30sp" android:textStyle="bold" />

        <TextView android:id="@+id/Station_latitude" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:hint="Station Latitude:"
            android:lineSpacingExtra="10sp" android:text="Station Latitude"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary1" android:textSize="30sp"
            android:textStyle="bold" app:fontFamily="sans-serif" />

        <TextView android:id="@+id/Station_longitude" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:hint="Station Longitude:"
            android:text="Station Longitude" android:textColor="@color/colorPrimary1"
            android:textSize="30sp" android:textStyle="bold" />


        <TextView android:id="@+id/Station_code" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:hint="Station Code:"
            android:src="@drawable/ic_place_black_48dp" android:text="Station Code"
            android:textColor="@color/colorPrimary1" android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>