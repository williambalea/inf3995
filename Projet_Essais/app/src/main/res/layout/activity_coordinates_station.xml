<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/background_bg"
    android:orientation="vertical" android:weightSum="9"
    tools:context=".StationCoordinatesActivity"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schemas.android.com/tools ">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_weight="1"
    app:layout_constraintBottom_toTopOf="parent"
    app:layout_constraintTop_toBottomOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_place_black_48dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="@string/station_coordinates_title"
                    android:textColor="@color/colorWhite"
                    android:textSize="65sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:background="@drawable/recyclerview_bg"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Station_code_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_place_black_48dp"
                android:text="Code : "
                android:textColor="@color/colortextdata"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Station_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:text="Station Code"
                android:textColor="@color/colortextlabel"
                android:textSize="50sp"
                android:textStyle="bold"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Station_name_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name : "
                android:textColor="@color/colortextdata"
                android:textSize="50sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/Station_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:text="Station Name"
                android:textColor="@color/colortextlabel"
                android:textSize="50sp"
                android:textStyle="bold"
                app:fontFamily="sans-serif"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Station_latitude_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude : "
                android:textColor="@color/colortextdata"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView android:id="@+id/Station_latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Station Latitude:"
                android:lineSpacingExtra="10sp"
                android:text="Station Latitude"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colortextlabel"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:textSize="50sp"
                android:textStyle="bold"
                app:fontFamily="sans-serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Station_longitude_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longitude : "
                android:textColor="@color/colortextdata"
                android:textSize="50sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/Station_longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Station Longitude"
                android:textColor="@color/colortextlabel"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:textSize="50sp"
                android:textStyle="bold"
                app:fontFamily="sans-serif"/>

        </LinearLayout>







    </LinearLayout>

</LinearLayout>